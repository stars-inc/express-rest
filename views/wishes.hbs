<h1>Wishes Page</h1>

{{#if wishes.length}}
  {{#each wishes}}
    <div class="row">
      <div class="col s12">
        <div class="card blue-grey darken-3">
          <div class="card-image">
            <img src="{{ img }}" alt="{{ title }}">
          </div>
          <div class="card-action">
            <p class="card-title text-blue">{{ title }}</p>
            <p class="price">{{ price }}</p>
          </div>
          <div class="card-action">
            <a href="/wishes/{{ id }}">Find more</a>
            <a href="/wishes/{{ id }}/edit?allow=true">Edit wish</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>There are no Wishes yet...</p>
{{/if}}