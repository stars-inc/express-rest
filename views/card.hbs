<h1>Card</h1>

{{#if wishes.length}}
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Count</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each wishes}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Total:</strong> <span class="price">{{price}}</span></p>
{{else}}
  <p>Card is empty</p>
{{/if}}